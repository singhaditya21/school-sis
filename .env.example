# ─── School-SIS Environment Variables ─────────────────────
# Copy this file to .env and fill in values.
# NEVER commit .env to version control!

# ─── Database ─────────────────────────────────────────────
DATABASE_URL=postgresql://school_admin:CHANGE_ME@localhost:5432/school_sis

# ─── Authentication ───────────────────────────────────────
SESSION_SECRET=generate-a-32-char-random-string-here
ENCRYPTION_KEY=generate-a-32-char-hex-string-here

# ─── Application ──────────────────────────────────────────
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ─── File Storage ─────────────────────────────────────────
STORAGE_PROVIDER=local
UPLOAD_DIR=./uploads
# For S3:
# STORAGE_PROVIDER=s3
# S3_BUCKET=school-sis-uploads
# S3_REGION=ap-south-1
# S3_ACCESS_KEY=
# S3_SECRET_KEY=

# ─── Background Jobs ─────────────────────────────────────
JOB_QUEUE_MODE=sync
# For BullMQ:
# JOB_QUEUE_MODE=bullmq
# REDIS_HOST=localhost
# REDIS_PORT=6379

# ─── Razorpay (Payment Gateway) ──────────────────────────
# RAZORPAY_KEY_ID=rzp_live_xxxxx
# RAZORPAY_SECRET=xxxxx

# ─── Communication (SMS/WhatsApp) ─────────────────────────
# GUPSHUP_API_KEY=
# GUPSHUP_APP_NAME=
# MSG91_AUTH_KEY=
# MSG91_TEMPLATE_ID=
# RESEND_API_KEY=

